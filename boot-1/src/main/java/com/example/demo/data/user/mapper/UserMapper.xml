<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.user.dao.UserDao">

	
	<!-- 根据用户名和密码查询用户信息 -->
	<select id="queryUserByNamePWD" resultMap="map">
		SELECT
			a.*, (
		SELECT
			ZW_QX
		FROM
			cms_gl_zw
		WHERE
			ID = RY_ZWID
		) "ZW_QX"
		FROM
			cms_gl_ry a
		WHERE
			RY_XM = #{0}
		and
			RY_PWD = #{1}
	</select>
	
	<!-- 根据用户ID查询 用户职位权限 -->
	<select id="userPermission" parameterType="int" resultType="int">
		SELECT
			ZW_QX
		FROM
			cms_gl_zw
		WHERE
			ID = #{id}
	</select>

</mapper>